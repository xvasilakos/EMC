package stats.handlers;

import caching.base.AbstractCachingPolicy;

/**
 * @author xvas
 * @param <USER_TYPE>
 * @param <CELL_TYPE>
 */
public abstract class AbstractGainStat<USER_TYPE, CELL_TYPE, REQUEST_TYPE> extends BaseHandler implements stats.handlers.ICompute {

    private final AbstractCachingPolicy _cachingPolicy;

    public AbstractGainStat(AbstractCachingPolicy cachingMethod) {
        super();
        _cachingPolicy = cachingMethod;
    }

    public abstract double computeGain(USER_TYPE user, REQUEST_TYPE request) throws stats.StatisticException;

    @Override
    public String title() {
        return getClass().getName() + "(" + _cachingPolicy.toString().substring(8) + ")";
    }
    abstract public String title(String str);

    /**
     * @return the _cachingPolicy
     */
    public AbstractCachingPolicy getCachingPolicy() {
        return _cachingPolicy;
    }
}
