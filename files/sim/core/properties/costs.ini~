####################################################################################################
############################################ COSTS #################################################
####################################################################################################
 
## Gamma factor used in the cache congestion pricing model. 
 # Ignored if cost.cache.type is set to "fixed"
cost.epc.gamma=2.0

## Cache utilization target used in the cache congestion pricing model. 
 # Ignored if cost.cache.type is set to "fixed"
cost.epc.target_utilization=0.975 	


## Pricing scheme for the cache space.
 #
 #	- fixed
 #		A fixed price is used for each caching decision, as defined in parameter
 #		"cost.cache.fixed_price.sc" 	
 #	- dynamic.type_01
 # 		The price value is defined by the following function description:
 #		price:= max (0, previous_price + cost.epc.gamma * (utilization - cost.epc.target_utilization)
 #		Note that if there is "overdemand" for the buffer space, the price continues to increase.
 #	- dynamic.type_02
 #		If utilization falls below the target threshold, then the price turns to zero rather than 
 #		gradually decaying, as in the case of dynamic.type_02.
 #
cost.cache.pricing_scheme=dynamic.type_01


## Remote path transfer cost
 #
 #	- propagation_delay+mc_wireless
 #		Path costs adapt to the product of cost.transfer_delay.hop_cost x cost.transfer.propagation.hop_count.{mean, std}
 #		Final wireless hop cost is defined by cost.transfer.wireless_hop_cost.{sc, mc}
 #
 #	- monetary
 #		Uses a MDU (see cost.mc.MDU below) to define the remote path transfer cost 
cost.transfer_cost_on_miss.type=monetary


## Macrocellular transmission Monetary cost per Data Unit (MDU)
cost.mc.MDU=10	


## The following are used to compute the cost of the remote distance between the origins ISP of a requested object
 # and the ISP serving the mobile.
cost.transfer_delay.propagation.hop_count.mean=4.2 
cost.transfer_delay.propagation.hop_count.std=1.05
cost.transfer_delay.hop_cost=10.0

cost.transfer_delay.wireless_hop_cost.mc=58.0
cost.transfer_delay.wireless_hop_cost.sc=10.0

